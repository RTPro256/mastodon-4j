# Mastodon 4j Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Spring profile - MUST be 'prod' for production
SPRING_PROFILES_ACTIVE=prod

# Database Configuration
# PostgreSQL connection URL
DATABASE_URL=jdbc:postgresql://localhost:5432/mastodon
DATABASE_USERNAME=mastodon
DATABASE_PASSWORD=your_secure_password_here

# Instance Configuration
# Your instance's public domain (without https://)
MASTODON_DOMAIN=social.example.com
# Your instance's full URL (with https://)
MASTODON_BASE_URL=https://social.example.com

# Secret Keys
# Generate with: openssl rand -hex 32
# Or on Windows PowerShell: [Convert]::ToHexString((1..32 | ForEach-Object { Get-Random -Maximum 256 }))
SECRET_KEY_BASE=your_64_character_hex_secret_key_here
OTP_SECRET=your_64_character_hex_otp_secret_here

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Server Configuration
SERVER_PORT=8080

# Media Storage
MASTODON_MEDIA_STORAGE_PATH=/var/lib/mastodon/media
MASTODON_MEDIA_BASE_URL=https://social.example.com/media

# Federation
MASTODON_FEDERATION_ENABLED=true
MASTODON_FEDERATION_DOMAIN=social.example.com

# Email/SMTP Configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_LOGIN=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Rate Limiting
RATE_LIMIT_RPM=300

# Admin Contact
MASTODON_ADMIN_EMAIL=admin@example.com
SECURITY_CONTACT_EMAIL=security@example.com

# Instance Details
MASTODON_INSTANCE_NAME=My Mastodon Instance
MASTODON_INSTANCE_DESCRIPTION=A Mastodon instance powered by Java

# Logging
LOG_PATH=/var/log/mastodon

# ===========================================
# DEVELOPMENT ONLY (DO NOT USE IN PRODUCTION)
# ===========================================

# For development, you can use H2 embedded database
# SPRING_PROFILES_ACTIVE=dev
# DATABASE_URL=jdbc:h2:file:./data/mastodon_dev
# DATABASE_USERNAME=sa
# DATABASE_PASSWORD=
